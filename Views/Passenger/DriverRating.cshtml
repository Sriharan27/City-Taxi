@model DriverRatings
@{
    Layout = "~/Views/Passenger/PassengerLayout.cshtml";
}
<style>
    .rating {
        display: inline-flex;
        direction: rtl;
    }

        .rating input {
            display: none;
        }

        .rating label {
            font-size: 2rem;
            color: #ccc;
            cursor: pointer;
        }

        .rating input:checked ~ label {
            color: #f39c12;
        }

        .rating input:hover ~ label,
        .rating label:hover {
            color: #f39c12;
        }
</style>
<div class="container d-flex justify-content-center align-items-center">
<div class="rating-box text-center" style="background: beige;  padding: 10px;   border-radius: 50px; width:100%">
    <p class="m-0">how was your experience?</p>
    <h2 class="mt-5">Rate the Driver</h2>
    <form method="POST" asp-action="DriverRatings">
        <input asp-for="ReservationID" value="@ViewData["reservationID"]" hidden />
        <div class="rating">
            <input asp-for="Stars" type="radio" id="star5" value="5" />
            <label for="star5" class="fas fa-star"></label>

            <input asp-for="Stars" type="radio" id="star4" value="4" />
            <label for="star4" class="fas fa-star"></label>

            <input asp-for="Stars" type="radio" id="star3" value="3" />
            <label for="star3" class="fas fa-star"></label>

            <input asp-for="Stars" type="radio" id="star2" value="2" />
            <label for="star2" class="fas fa-star"></label>

            <input asp-for="Stars" type="radio" id="star1" value="1" />
            <label for="star1" class="fas fa-star"></label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Done</button>
        </div>
    </form>
    <div id="resultMessage" class="mt-3"></div>
</div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}